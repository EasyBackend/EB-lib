{
  "extends": "./tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "./src/build",
    "declaration": true,
    "skipLibCheck": true, 
    "esModuleInterop": true, 
    "typeRoots" : ["./node_modules/@types", "./src/types"],
    "rootDir": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "./src/build",
    "assets",
    "example"
  ],
}
